<h1>Listing ideas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Platform</th>
      <th>Architecture</th>
      <th>Tools</th>
      <th>Hardware</th>
      <th>Effort</th>
      <th>Deadline</th>
      <% if user_signed_in? %>
        <th colspan="3"></th>
      <% else %>
        <th></th>
      <% end %>
    </tr>
  </thead>

  <tbody class="">
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.platform %></td>
        <td><%= idea.architecture %></td>
        <td><%= idea.tools %></td>
        <td><%= idea.hardware %></td>
        <td><%= idea.effort %></td>
        <td><%= idea.deadline %></td>

        <td><%= link_to 'Show', idea, class: 'btn btn-default' %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_idea_path(idea), class: 'btn btn-default' %></td>
          <td><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Idea', new_idea_path, class: 'btn btn-primary' %>
