<h1>Listing projects</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Status</th>
      <th>Modified At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.users.map {|u| u.username}.join(', ') %></td>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.idea.name, idea_path(project.idea) %></td>
        <td><%= project.status %></td>
        <td><%= time_ago_in_words project.updated_at %></td>
         <% if user_signed_in? and project.users.include? current_user %>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-default' %></td>
          <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Project', new_project_path, class: 'btn btn-primary' %>
<% end %>
