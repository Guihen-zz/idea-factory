<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Idea</th>
      <th>Status</th>
      <th>Modified At</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% projects.each do |project| %>
      <tr>
        <td><%= project.users.map {|u| u.username}.join(', ') %></td>
        <td><%= link_to project.name, project %></td>
        <td><%= link_to project.idea.name, idea_path(project.idea) %></td>
        <td><%= project.status %></td>
        <td><%= time_ago_in_words project.updated_at %></td>
         <% if user_signed_in?%>
          <% if my_projects %>
            <td></td>
            <td><%= link_to 'unsubscribe', unsubscribe_url(project.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
          <% else %>
            <td></td>
            <td><%= link_to 'subscribe', subscribe_url(project.id), method: :update, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %></td>
          <% end %>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
