<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :idea_id %><br>
    <%= f.select :idea_id, options_from_collection_for_select(Idea.all, "id", "name"), prompt: "Choose an idea", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select :status, options_for_select(["new", "working", "on hold", "completed", "cancelled"]), class: 'form-control' %>
  </div>
  
  <div class="actions">
    <%= f.submit "Save", data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %>
  </div>
<% end %>
